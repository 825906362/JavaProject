        <!-- <mapper class="nynu.mapper.UserMapper" ></mapper>
         <mapper class="nynu.mapper.UserMapper2" ></mapper>-->
        <!--mapper.xml加载方法3-->
        <package name="nynu.mapper"/>
    </mappers>
</configuration>
